<div class="container">
<h1>Add new dose</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%=  simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description, placeholder: '10 cl, some drop...' %>
        <%= f.submit 'Add', class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>

</div>
