<div class="container">
<h1>List of cocktails</h1>

  <ul>
    <% @cocktails.each do |cocktail| %>
      <li> <b> <%= link_to cocktail.name, cocktail_path(cocktail) %> </b>
      </li>
    <% end %>
  </ul>
  <%= link_to "Add a new cocktail", new_cocktail_path(@cocktail), class: "btn btn-success" %>
</div>
